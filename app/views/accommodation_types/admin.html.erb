<h1> Hospedajes Prueba </h1>
    <div class="row">
        <div class="col-md-6">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Tipo de Hospedaje</th>
                <th>Activo</th>
                <th>Modificar</th>
                <th>Eliminar</th>
                <th>Desactivar</th>
              </tr>
            </thead>
            <tbody>
	<ul>
		<% @tipoHospedaje.each do |h| %>
			<tr>
                <td> <%= h.id %> </td>
                <td> <%= h.nombre %> </td>
                <td>
                	<% if h.activo == true %>
                    <button type="button" class="btn btn-lg btn-success">      </button>
                  <% else %>
                    <button type="button" class="btn btn-lg btn-default">      </button>  
                  <% end %>  
                </td>
                <td><button type="button" class="btn btn-lg btn-warning">      </button></td>
                <td><button type="button" class="btn btn-lg btn-danger" >      </button></td>
                <td><button type="button" class="btn btn-lg btn-default">      </button></td>
             </tr>
		<% end %>

	</ul>
			</tbody>
          </table>
        </div>
      </div>

    </body>